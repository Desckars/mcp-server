# ===========================================
# CONFIGURACIÓN DEL SERVIDOR MCP UNIVERSAL
# ===========================================

# Puerto del servidor (opcional, para modo HTTP)
PORT=3000

# ===========================================
# CONFIGURACIÓN DE LLMs
# ===========================================

# OpenAI (GPT)
OPENAI_API_KEY=tu_openai_api_key_aqui
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096

# Google Gemini
GOOGLE_API_KEY=tu_google_api_key_aqui
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=4096

# Hugging Face (para Llama y otros)
HUGGINGFACE_API_KEY=tu_huggingface_api_key_aqui
HUGGINGFACE_MODEL=meta-llama/Llama-2-70b-chat-hf

# ===========================================
# CONFIGURACIÓN DE BASES DE DATOS
# ===========================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mcp_server
MONGODB_DB_NAME=mcp_server

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================

# Entorno de ejecución
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_FILE=logs/mcp-server.log

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# JWT Secret (si implementas autenticación)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# API Keys para autenticación del servidor
API_KEYS=key1,key2,key3
